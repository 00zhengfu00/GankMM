<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/umeng_fb_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/umeng_fb_reply_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/umeng_fb_item_time_size"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/feedback_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/umeng_fb_reply_date"
        android:src="@drawable/head_user" />

    <TextView
        android:id="@+id/umeng_fb_reply_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/feedback_avatar"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/feedback_avatar"
        android:background="@drawable/feedback_user_reply_background"
        android:maxWidth="240dp"
        android:paddingLeft="12dp"
        android:paddingRight="20dp"
        android:text="hhhh"
        android:textColor="@color/umeng_fb_secondary_text_light"
        android:textSize="@dimen/umeng_fb_item_content_size" />
</RelativeLayout>